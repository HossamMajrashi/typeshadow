{
  "id": "com.hossam.typeshadow",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "25.08",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.node20"
  ],
  "command": "run.sh",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--filesystem=home",
    "--share=network",
    "--socket=session-bus",
    "--env=ELECTRON_TRASH=gio"
  ],
  "modules": [
    {
      "name": "typeshadow",
      "buildsystem": "simple",
      "build-options": {
        "append-path": "/usr/lib/sdk/node20/bin"
      },
      "build-commands": [
        ". /usr/lib/sdk/node20/enable.sh",
        "npm install",
        "cp -r . /app/typeshadow",
        "install -Dm755 run.sh /app/bin/run.sh",
        "install -Dm644 Icons/256x256.png /app/share/icons/hicolor/256x256/apps/com.hossam.typeshadow.png",
        "install -Dm644 com.hossam.typeshadow.desktop /app/share/applications/com.hossam.typeshadow.desktop",
        "install -Dm644 com.hossam.typeshadow.metainfo.xml /app/share/metainfo/com.hossam.typeshadow.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        {
          "type": "script",
          "dest-filename": "run.sh",
          "commands": [
            "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
            "export ELECTRON_TRASH=gio",
            "cd /app/typeshadow",
            "exec zypak-wrapper /app/typeshadow/node_modules/electron/dist/electron . \"$@\""
          ]
        }
      ]
    }
  ]
}
